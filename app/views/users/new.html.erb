<h1>Register</h1>
<%= form_for(@user) do |f| %>

  <p>
    <%= f.label :first_name,'First Name'%>
    <%= f.text_field :first_name %>
  </p>

  <p>
    <%= f.label :last_name,''%>
    <%= f.text_field :last_name %>
  </p>

  <p>
    <%= f.label :address,''%>
    <%= f.text_field :address %>
  </p>

  <p>
    <%= f.label :city,'City'%>
    <%= f.text_field :city %>
  </p>

  <p>
    <%= f.label :state,'State (e.g. CA)'%>
    <%= f.text_field :state %>
  </p>

  <p>
    <%= f.label :zip_code,'Zipcode'%>
    <%= f.text_field :zip_code %>
  </p>

  <p>
    <%= f.label :email,'Email'%>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.submit 'Submit' %>
  </p>

<% end %>